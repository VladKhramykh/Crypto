<Page x:Class="lab_03.ObrMod"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:lab_03"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ObrMod">

    <Grid>
        <StackPanel Orientation="Vertical" Margin="0 50 0 0">
            <StackPanel Orientation="Horizontal" Margin="50 0 50 0" >
                <StackPanel Orientation="Vertical">
                    <Label Margin="5 0 0 0" FontSize="14">Обратное число числа</Label>
                    <TextBox Name="first" Width="70" Margin="10 0 0 0" FontSize="16"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="10 0 0 0">
                    <Label Margin="5 0 0 0" FontSize="14">по модулю</Label>
                    <TextBox Name="second" Width="70" FontSize="16"></TextBox>
                </StackPanel>
                <Label x:Name="label" Margin="30 0 0 0" Content=" = " FontSize="20" VerticalAlignment="Bottom"></Label>
                </StackPanel>
            <Button Margin="60 20 0 0" Width="70" Height="30" HorizontalAlignment="Left" Name="button" Click="button_Click" Content="Count"></Button>
        </StackPanel>
    </Grid>
</Page>
