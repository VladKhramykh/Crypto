        <Label Content="Source" HorizontalAlignment="Left" Margin="71,49,0,0" VerticalAlignment="Top"/>
        <Label Content="Hash" HorizontalAlignment="Left" Margin="71,118,0,0" VerticalAlignment="Top"/>
        <Button x:Name="hashBtn" Content="Hash (SHA2)" HorizontalAlignment="Left" Margin="555,80,0,0" VerticalAlignment="Top" Width="107" Height="219" FontSize="16" Click="hashBtn_Click"/>
        <Label x:Name="execLabel" Content="" HorizontalAlignment="Left" Margin="71,318,0,0" VerticalAlignment="Top"/>
        <Label x:Name="isVerificatedLabel" Content="" HorizontalAlignment="Left" Margin="70,349,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
